<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mybatisdemo.mapper.TeaMapper">

    <update id="update">
        update tea

        <set>
            <if test="name != null">name=#{name},</if>
        </set>

        where id =#{id}
    </update>
</mapper>